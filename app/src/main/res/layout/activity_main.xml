<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/top_text"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="16조의 약속"
        android:textSize="30dp"
        android:gravity="center|center_vertical"
        android:background="@drawable/top_edge"
        app:layout_constraintTop_toTopOf="parent"
        />
    <ImageButton
        android:id="@+id/menu"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/icon_menu"
        android:scaleType="centerInside"
        android:background="@color/none"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        />
    <ImageButton
        android:id="@+id/user_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/icon_user_image"
        android:scaleType="centerCrop"
        android:background="@color/none"
        android:layout_marginTop="5dp"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:id="@+id/this_week_date"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="21.03.01~21.03.06"
        android:textSize="20dp"
        android:gravity="center|center_vertical"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_text"
        />
    <TextView
        android:id="@+id/confirm_appoint"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="  확정된 약속"
        android:textSize="25dp"
        android:gravity="left|center_vertical"
        app:layout_constraintTop_toBottomOf="@+id/this_week_date"
        />
    <ScrollView
        android:id="@+id/confirm_appoint_list"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:layout_constraintTop_toBottomOf="@id/confirm_appoint"
        >
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*">
            <TableRow>

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:text="날짜"
                    android:textSize="18dp"
                    android:gravity="center|center_vertical"/>
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:text="시간"
                    android:textSize="18dp"
                    android:gravity="center|center_vertical"/>
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:text="약속 내용"
                    android:textSize="18dp"
                    android:gravity="center|center_vertical"/>
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:text="인원"
                    android:textSize="18dp"
                    android:gravity="center|center_vertical"/>
            </TableRow>
            <TableRow>

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:text="03/01"
                    android:textSize="18dp"
                    android:gravity="center|center_vertical"/>
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:text="15:00"
                    android:textSize="18dp"
                    android:gravity="center|center_vertical"/>
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:text="3.1절 기념방송 시속청"
                    android:textSize="18dp"
                    android:gravity="center|center_vertical"/>
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:text="03/03"
                    android:textSize="18dp"
                    android:gravity="center|center_vertical"/>
            </TableRow>
            <TableRow>

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:text="03/05"
                    android:textSize="18dp"
                    android:gravity="center|center_vertical"/>
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:text="14:00"
                    android:textSize="18dp"
                    android:gravity="center|center_vertical"/>
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:text="종로에서 점심 약속"
                    android:textSize="18dp"
                    android:gravity="center|center_vertical"/>
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:text="02/02"
                    android:textSize="18dp"
                    android:gravity="center|center_vertical"/>

            </TableRow>
        </TableLayout>
    </ScrollView>

    <TextView
        android:id="@+id/recruit_appoint"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="  모집중인 약속"
        android:textSize="25dp"
        android:gravity="left|center_vertical"
        app:layout_constraintTop_toBottomOf="@+id/confirm_appoint_list"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:layout_constraintTop_toBottomOf="@id/recruit_appoint"
        >
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*">
            <TableRow>

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:text="날짜"
                    android:textSize="18dp"
                    android:gravity="center|center_vertical"/>
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:text="시간"
                    android:textSize="18dp"
                    android:gravity="center|center_vertical"/>
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:text="약속 내용"
                    android:textSize="18dp"
                    android:gravity="center|center_vertical"/>
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:text="인원"
                    android:textSize="18dp"
                    android:gravity="center|center_vertical"/>
            </TableRow>
            <TableRow>

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:text="03/05"
                    android:textSize="18dp"
                    android:gravity="center|center_vertical"/>
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:text="12:00"
                    android:textSize="18dp"
                    android:gravity="center|center_vertical"/>
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:text="무한리필 고기 조지실분"
                    android:textSize="18dp"
                    android:gravity="center|center_vertical"/>
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:text="01/03"
                    android:textSize="18dp"
                    android:gravity="center|center_vertical"/>
            </TableRow>
            <TableRow>

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:text="03/06"
                    android:textSize="18dp"
                    android:gravity="center|center_vertical"/>
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:text="17:00"
                    android:textSize="18dp"
                    android:gravity="center|center_vertical"/>
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:text="운동장에서 풋살하실분 "
                    android:textSize="18dp"
                    android:gravity="center|center_vertical"/>
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:text="09/12"
                    android:textSize="18dp"
                    android:gravity="center|center_vertical"/>

            </TableRow>
        </TableLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>